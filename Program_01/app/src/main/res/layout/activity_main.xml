<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_v_loginError"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104dp"
        android:text="*This account does not exits. Either the email or password is wrong*"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_createAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_v_login" />

    <TextView
        android:id="@+id/tv_v_passwordError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:text="*Password must be filled out*"
        android:textColor="#FF0000"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_login"
        app:layout_constraintStart_toStartOf="@+id/btn_v_login"
        app:layout_constraintTop_toBottomOf="@+id/et_v_password" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:layout_marginBottom="76dp"
        android:text="MARS"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/et_v_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_v_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/tv_v_emailError"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/et_v_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/tv_v_passwordError"
        app:layout_constraintStart_toStartOf="@+id/et_v_email"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_emailError" />

    <Button
        android:id="@+id/btn_v_login"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="Login"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_v_loginError"
        app:layout_constraintEnd_toEndOf="@+id/tv_v_loginError"
        app:layout_constraintStart_toStartOf="@+id/tv_v_loginError"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_passwordError" />

    <Button
        android:id="@+id/btn_v_createAccount"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:text="Create Account"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_createBusiness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_loginError" />

    <Button
        android:id="@+id/btn_v_createBusiness"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="132dp"
        android:text="Create Business Account"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_v_createAccount" />

    <TextView
        android:id="@+id/tv_v_emailError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="*Email must be filled out*"
        android:textColor="#FF0000"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/et_v_password"
        app:layout_constraintStart_toStartOf="@+id/et_v_email"
        app:layout_constraintTop_toBottomOf="@+id/et_v_email" />
</androidx.constraintlayout.widget.ConstraintLayout>