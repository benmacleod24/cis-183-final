<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editBusinessProfile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".businessHome">

        <ImageView
            android:id="@+id/btn_v_ebp_businessHome"
            android:layout_width="137dp"
            android:layout_height="75dp"
            android:layout_marginStart="136dp"
            android:layout_marginEnd="138dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/home_icon" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:text="Edit Profile"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="148dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:text="New Name"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:layout_editor_absoluteX="161dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="New Number"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/et_v_ebp_name"
            tools:layout_editor_absoluteX="153dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="New Password"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/et_v_ebp_number"
            tools:layout_editor_absoluteX="145dp" />

        <EditText
            android:id="@+id/et_v_ebp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:layout_editor_absoluteX="103dp" />

        <EditText
            android:id="@+id/et_v_ebp_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            tools:layout_editor_absoluteX="103dp" />

        <EditText
            android:id="@+id/et_v_ebp_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            tools:layout_editor_absoluteX="100dp" />

        <Button
            android:id="@+id/btn_v_ebp_saveChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="Save Changes"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_v_ebp_error"
            tools:layout_editor_absoluteX="124dp" />

        <TextView
            android:id="@+id/tv_v_ebp_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="*Please keep all fields filled*"
            android:textColor="#FF0000"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/et_v_ebp_password"
            tools:layout_editor_absoluteX="116dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/btn_v_ebp_seeOrders"
        android:layout_width="137dp"
        android:layout_height="75dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ticket_alt" />

    <ImageView
        android:id="@+id/btn_v_ebp_editProfile"
        android:layout_width="137dp"
        android:layout_height="75dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/user_cicrle_duotone_line" />
</androidx.constraintlayout.widget.ConstraintLayout>